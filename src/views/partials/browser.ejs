<div class="container-fluid booking mt-5 pb-5">
  <div class="container pb-5">
    <div class="bg-light shadow" style="padding: 30px">
      <div class="row align-items-center" style="min-height: 60px">
        <div class="col-md-10">
          <div class="row">
            <div id="tipoHabitacion" class="col-md-3">
              <div class="mb-3 mb-md-0">
                <select
                  id="type"
                  class="custom-select px-4"
                  style="height: 47px"
                  name="tipo"
                  required
                >
                  <option disabled selected value="">Tipo habitación</option>
                  <option value="1">Habitación Ordinaria</option>
                  <option value="3">Habitación Compartida</option>
                </select>
              </div>
            </div>
            <div id="check-in" class="col-md-3">
              <div class="mb-3 mb-md-0">
                <div class="date" id="date1" data-target-input="nearest">
                  <input
                    type="text"
                    class="form-control p-4 datetimepicker-input"
                    placeholder="Chek-In"
                    data-target="#date1"
                    data-toggle="datetimepicker"
                    id="checkin"
                  />
                </div>
              </div>
            </div>
            <div id="check-out" class="col-md-3">
              <div class="mb-3 mb-md-0">
                <div class="date" id="date2" data-target-input="nearest">
                  <input
                    type="text"
                    class="form-control p-4 datetimepicker-input"
                    placeholder="Check-Out"
                    data-target="#date2"
                    data-toggle="datetimepicker"
                    id="checkout"
                  />
                </div>
              </div>
            </div>
            <div id="Huespedes" class="col-md-3">
              <div class="mb-3 mb-md-0">
                <input
                  type="number"
                  class="custom-select px-4"
                  style="height: 47px; margin: 0"
                  min="1"
                  max="1"
                  placeholder="Huéspedes"
                  id="huespedes"
                />
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-2">
          <button
            id="btnbrowser"
            class="btn btn-primary btn-block"
            type="submit"
            style="height: 47px; margin-top: -2px"
          >
            Buscar
          </button>
        </div>
      </div>
      <div id="danger" class="d-none text-center">
        <p id="text-Danger" class="text-danger">No hay habitacion disponible para estas fecha. Intente utilizar otro tipo de habitacion</p>
      </div>
    </div>
  </div>
</div>

<script src="js/browser.js"></script>